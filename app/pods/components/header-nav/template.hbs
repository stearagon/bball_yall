<div class="header-nav">
    <div class="header-nav__logo">
        {{#link-to (if session.isAuthenticated 'dashboard' 'index')}}
            <img src="https://www.dropbox.com/s/2vbujczcgdd5dsh/statstop_logo.png?dl=0"/>
        {{/link-to}}
    </div>

    {{#if session.isAuthenticated}}
        <div class="header-nav__links">
        </div>
    {{/if}}

    <div class="header-nav__actions">
        {{#if session.isAuthenticated}}
            <span class="header-nav-actions__email">{{currentUser.email}}</span>
            <a class="header-nav-actions__sign-out" {{action 'invalidateSession'}}>Sign Out</a>
        {{else}}
            {{#link-to 'login'}}Sign in/Sign up{{/link-to}}
        {{/if}}
    </div>
</div>
